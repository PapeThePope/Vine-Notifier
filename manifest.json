{
  "manifest_version": 3,
  "name": "Vine Notifier",
  "version": "1.0",
  "description": "Refreshes the Amazon Vine sites automatically and messages a webhook, when a new product was found.",
  "permissions": [
    "storage"
  ],
  "host_permissions": [
    "https://*/",
    "http://*/"
  ],
  "content_scripts": [
    {
      "matches": [
        "*://*.amazon.de/vine/*",
        "*://*.amazon.com/vine/*",
        "*://*.amazon.co.uk/vine/*",
        "*://*.amazon.fr/vine/*",
        "*://*.amazon.it/vine/*",
        "*://*.amazon.es/vine/*"
      ],
      "js": [
        "content.js"
      ],
      "run_at": "document_idle"
    }
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_title": "Vine Notifier"
  }
}